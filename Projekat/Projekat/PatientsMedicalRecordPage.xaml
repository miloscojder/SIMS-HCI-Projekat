<Window x:Class="Projekat.PatientsMedicalRecordPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat"
        mc:Ignorable="d"
        Title="PatientsMedicalRecordPage" Background="LightSkyBlue" Height="550" Width="815">
    <Grid>
        <StackPanel Orientation="Horizontal" Background="LightSkyBlue" Margin="0,0,0,460">
            <Button Content="HOME PAGE" Click="Button_Click" Width="112" ></Button>
            <Button Content="MY APPOINTMENTS" Click="Button_Click_1" Width="174" />
            <Button Content="MY NOTIFICATIONS" Click="Button_Click_2" Width="157" />
            <Button Content="MY MEDICAL RECORD" Click="Button_Click_3" Width="160"/>
            <Button Content="Q and A" Click="Button_Click_4" Width="100"/>
            <Button Content="MY PROFILE" Click="Button_Click_5" Width="99" />
        </StackPanel>
        <ListView x:Name="lvMedicalRecord" Background="LightCyan" Margin="32,161,31,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Datum" Width="120" />
                    <GridViewColumn Header="Anamneza" Width="326"/>
                    <GridViewColumn Header="Prepisani lekovi" Width="300"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="My medical record:" HorizontalAlignment="Center" Margin="0,99,0,0" VerticalAlignment="Top" FontSize="19" Width="172"/>
    </Grid>
</Window>
