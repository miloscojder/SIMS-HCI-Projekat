<Window x:Class="Projekat.CreateNotifficationPatientPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"        
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        xmlns:local="clr-namespace:Projekat"
        mc:Ignorable="d"
        Title="CreateNotifficationPatientPage" Background="LightSkyBlue" Height="550" Width="800">
    <Grid>
        <Label Content="Create your notification" HorizontalAlignment="Center" Margin="0,39,0,0" VerticalAlignment="Top" FontSize="21" FontFamily="Arial Black"/>
        <Label Content="Name: " HorizontalAlignment="Left" Margin="77,130,0,0" VerticalAlignment="Top"/>
        <Label Content="Description: " HorizontalAlignment="Left" Margin="77,194,0,0" VerticalAlignment="Top"/>
        <Label Content="Starting date and time: " HorizontalAlignment="Left" Margin="77,287,0,0" VerticalAlignment="Top"/>
        <Label Content="Days repeat: " HorizontalAlignment="Left" Margin="77,348,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="NotificationNameTextBox" HorizontalAlignment="Left" Margin="225,138,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="NotificationDescriptionTextBox" HorizontalAlignment="Left" Margin="225,176,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="535" Height="79"/>
        <TextBox x:Name="NotificationDaysLeftTextBox" HorizontalAlignment="Left" Margin="225,356,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <DatePicker Name="NotifciationDateDatePicker" HorizontalAlignment="Left" Margin="225,289,0,0" VerticalAlignment="Top"/>
        <Button Content="Create" HorizontalAlignment="Left" Margin="259,453,0,0" VerticalAlignment="Top" Click="Button_Click" Height="33" Width="68"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="473,453,0,0" VerticalAlignment="Top" Click="Button_Click_1" Height="33" Width="68"/>
        <ComboBox Name="NotrificationDateComboBox" ItemsSource="{Binding Termini}" HorizontalAlignment="Center" Margin="0,291,0,0" VerticalAlignment="Top" Width="90"/>
    </Grid>
</Window>
