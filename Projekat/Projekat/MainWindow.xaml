        xmlns:local="clr-namespace:Projekat"
        mc:Ignorable="d"

        Title="MainWindow" Background="AliceBlue" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Height="450" Width="800">

    <Grid>
