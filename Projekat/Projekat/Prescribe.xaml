        <Label Content="Patient&#xD;&#xA;" FontSize="18" HorizontalAlignment="Left" Margin="215,83,0,0" VerticalAlignment="Top" Height="49" RenderTransformOrigin="0.625,1.157"/>
        <TextBox Name="Name" FontSize="18" Background="LightCyan" HorizontalAlignment="Left" Margin="190,125,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="179" Height="41"/>
        <Label Content="Medicine" FontSize="18" HorizontalAlignment="Left" Margin="83,246,0,0" VerticalAlignment="Top" Height="36"/>
        <Label Content="Quantity:" FontSize="18" HorizontalAlignment="Left" Margin="72,327,0,0" VerticalAlignment="Top" Height="48" Width="83"/>
        <TextBox Name="Quantity" FontSize="18" Background="LightCyan" HorizontalAlignment="Left" Margin="190,327,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="179" Height="60"/>
        <Label Content="Instruction:" FontSize="18" HorizontalAlignment="Left" Margin="509,41,0,0" VerticalAlignment="Top" Height="48" Width="120"/>
