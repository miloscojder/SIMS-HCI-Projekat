        <TextBox x:Name="Surname" FontSize="18" Background="LightCyan" HorizontalAlignment="Left" Margin="190,176,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="179" Height="41"/>
        <TextBox x:Name="Allergic" FontSize="18" Background="LightCyan" HorizontalAlignment="Left" Margin="509,246,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="179" Height="41"/>
        <Label Content="Allergen:" FontSize="18" HorizontalAlignment="Left" Margin="534,200,0,0" VerticalAlignment="Top" Height="48" RenderTransformOrigin="0.625,1.157"/>



