        xmlns:local="clr-namespace:Projekat"
        mc:Ignorable="d"
        Title="Referrals" Height="450" Width="800">
    <Grid Margin="0,0,0,-108">
        <TabControl Margin="18,10,18,126" Background="AliceBlue">
