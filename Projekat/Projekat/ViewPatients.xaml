                    <Image HorizontalAlignment="Left"
                        Height="24"
                         VerticalAlignment="Top"
                         Width="48"
                        Source="C:\Users\krist\source\repos\SIMS-Projekat\Projekat\Projekat\Icons\search.png" Margin="285,94,0,0" />


