        <Image HorizontalAlignment="Left"
            Height="25"
            Margin="677,72,0,0"
            VerticalAlignment="Top"
            Width="60"
            Source="C:\Users\krist\source\repos\SIMS-Projekat\Projekat\Projekat\Icons\exit.png" />
