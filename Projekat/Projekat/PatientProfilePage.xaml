<Window x:Class="Projekat.PatientProfilePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat"
        mc:Ignorable="d"
        Title="PatientProfilePage"  Background="LightSkyBlue" Height="530" Width="815">
    <Grid>
        <StackPanel Orientation="Horizontal" Background="LightSkyBlue" Margin="0,0,0,444">
            <Button Content="HOME PAGE" Click="Button_Click" Width="112" ></Button>
            <Button Content="MY APPOINTMENTS" Click="Button_Click_1" Width="174" />
            <Button Content="MY NOTIFICATIONS" Click="Button_Click_2" Width="157" />
            <Button Content="MY MEDICAL RECORD" Click="Button_Click_3" Width="160"/>
            <Button Content="Q and A" Click="Button_Click_4" Width="100"/>
            <Button Content="MY PROFILE" Click="Button_Click_5" Width="99" />
        </StackPanel>
        
        <Label Content="Username: " HorizontalAlignment="Left" Margin="308,118,0,0" VerticalAlignment="Top"/>
        <Label Content="Password: " HorizontalAlignment="Left" Margin="77,395,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="PatientPasswordTextBox" HorizontalAlignment="Left" Margin="192,403,0,0" Text="******" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False" IsReadOnlyCaretVisible="True"/>
        <TextBox x:Name="PatientUsernameTextBox"  HorizontalAlignment="Left" Margin="454,126,0,0" Text="AleksaKralj" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="PatientUsernameTextBox_TextChanged" IsEnabled="False" IsReadOnlyCaretVisible="True"/>
        <Label Content="Frst Name: " HorizontalAlignment="Left" Margin="423,234,0,0" VerticalAlignment="Top"/>
        <Label Content="Last Name: " HorizontalAlignment="Left" Margin="423,264,0,0" VerticalAlignment="Top"/>
        <Label Content="BirthDay: " HorizontalAlignment="Left" Margin="423,299,0,0" VerticalAlignment="Top"/>
        <Label Content="JMBG: " HorizontalAlignment="Left" Margin="423,364,0,0" VerticalAlignment="Top"/>
        <Label Content="e-mail: " HorizontalAlignment="Left" Margin="423,330,0,0" VerticalAlignment="Top"/>
        <Label Content="Phone number:" HorizontalAlignment="Left" Margin="423,395,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="PatientFirstNameTextBox" HorizontalAlignment="Left" Margin="569,242,0,0" Text="Aleksa" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False" IsReadOnlyCaretVisible="True"/>
        <TextBox x:Name="PatientLastNameTextBox" HorizontalAlignment="Left" Margin="569,268,0,0" Text="Kralj" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False" IsReadOnlyCaretVisible="True"/>
        <TextBox x:Name="PatientBDayTextBox" HorizontalAlignment="Left" Margin="569,303,0,0" Text="08:11:1999" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False" IsReadOnlyCaretVisible="True"/>
        <TextBox x:Name="PatientEMailTextBox" HorizontalAlignment="Left" Margin="569,334,0,0" Text="aleksa@gmail.com" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False" IsReadOnlyCaretVisible="True"/>
        <TextBox x:Name="PatientJMBGTextBox" HorizontalAlignment="Left" Margin="569,373,0,0" Text="123123123123" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False" IsReadOnlyCaretVisible="True"/>
        <TextBox x:Name="PatientPhoneNumberTextBox" HorizontalAlignment="Left" Margin="569,399,0,0" Text="0610123123123" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False" IsReadOnlyCaretVisible="True"/>
        <Rectangle x:Name="PatientProfilePicutre" HorizontalAlignment="Left" Height="164" Margin="110,179,0,0" Stroke="Black" VerticalAlignment="Top" Width="188" Fill="#FFCECECE"/>
        <Button Content="Change Data" HorizontalAlignment="Left" Margin="656,463,0,0" VerticalAlignment="Top" Width="98" Height="27"/>

    </Grid>
</Window>
