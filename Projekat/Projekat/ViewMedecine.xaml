<Window x:Class="Projekat.ViewMedecine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat"
        mc:Ignorable="d"
        Title="Medecine" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.496,0.547">
        <Label Content="Medicine" HorizontalAlignment="Left" Margin="322,10,0,0" VerticalAlignment="Top" FontSize="30" FontWeight="Bold" Width="205"/>
        <DataGrid x:Name="dataGrid" ItemsSource="{Binding Medicines}" IsReadOnly="True"
            SelectionMode="Single" AutoGenerateColumns="False" Margin="77,65,77,0" Height="221" VerticalAlignment="Top">
            <DataGrid.Columns>
                <DataGridTextColumn  Header="Medicine Id" Width="80"  Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Name" Width="100" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Details" Width="200" Binding="{Binding Details}"/>
                <DataGridTextColumn Header="Alternative" Width="100" Binding="{Binding Alternative}"/>
                <DataGridTextColumn Header="Accepted" Width="100" Binding="{Binding Accepted}"/>
            </DataGrid.Columns>
        </DataGrid>


    </Grid>
</Window>
